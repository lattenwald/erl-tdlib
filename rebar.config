%% -*- mode: erlang -*-

{erl_opts, [debug_info]}.
{deps, [ { edown, ".*", {git, "https://github.com/uwiger/edown.git", "HEAD" } }
	   , { jsx, ".*", { git, "https://github.com/talentdeficit/jsx.git", { tag, "v2.9.0" } } }
	   , { lager, ".*", { git, "https://github.com/erlang-lager/lager.git", { tag, "3.6.4" } } }
	   ] }.

{ plugins,
  [ { rebar3_rust,
      { git, "https://gitlab.com/sdwolfz/rebar3_rust.git", {branch, "master"} } } ] }.

{ provider_hooks,
  [ { post, [ {compile, {rust, compile}} ] } ] }.

{edoc_opts, [{doclet, edown_doclet},
			 {app_default, "http://www.erlang.org/doc/man"},
             {top_level_readme,
              {"doc/README.md",
               "http://github.com/lattenwald/erl-tdlib"}}]}.
